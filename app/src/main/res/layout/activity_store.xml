<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".store.StoreActivity"
    android:background="@color/BLACK01">
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar"
        android:layout_height="wrap_content"
        android:layout_width="match_parent">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbarStore"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@android:color/white"
            app:contentInsetStart="0dp"
            app:contentInsetStartWithNavigation="0dp"
            android:paddingEnd="8dp"
            app:menu="@menu/menu_toolbar_home"
            app:navigationIcon="?attr/homeAsUpIndicator">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <TextView
                    android:layout_marginStart="12dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="Informasi Toko"
                    android:textSize="18sp"
                    android:fontFamily="@font/neosanspro_medium"
                    android:textColor="@color/BLACK80" />
                <ImageButton
                    android:id="@+id/btnAddFavorite"
                    android:layout_width="38dp"
                    android:layout_height="38dp"
                    android:src="@drawable/ic_button_favorite_not_activate"
                    android:background="?attr/actionBarItemBackground"/>
                <TextView
                    android:visibility="gone"
                    android:id="@+id/searchInStore"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:layout_marginVertical="8dp"
                    android:layout_marginEnd="6dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="Cari di store"
                    android:textSize="14sp"
                    android:fontFamily="@font/opensans_regular"
                    android:drawableStart="@drawable/ic_search_market"
                    android:drawablePadding="8dp"
                    android:background="@drawable/background_form_search_market"/>
            </LinearLayout>
        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>
    <androidx.core.widget.NestedScrollView
        android:overScrollMode="never"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/storeFront"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintDimensionRatio="H,2:1"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/image_placeholder_landscape"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true">
                    <Button
                        android:layout_marginHorizontal="12dp"
                        android:layout_marginVertical="12dp"
                        android:drawablePadding="8dp"
                        android:paddingHorizontal="12dp"
                        android:drawableStart="@drawable/ic_google_maps"
                        android:textAllCaps="false"
                        android:text="Maps"
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:elevation="2dp"
                        android:background="@drawable/background_button_redirect_gmaps"/>
                </LinearLayout>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@android:color/white"
                android:paddingHorizontal="16dp"
                android:paddingTop="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="top">
                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/storeName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/source_sanspro_regular"
                            android:textColor="@android:color/black"
                            android:textStyle="bold"
                            android:textSize="18sp"
                            tools:text="This is store name" />
                        <TextView
                            android:id="@+id/storeAddress"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            tools:text="This is store address"
                            android:fontFamily="@font/opensans_regular"
                            android:textColor="@color/BLACK60"
                            android:textSize="14sp"
                            android:paddingVertical="4dp"/>
                    </LinearLayout>
                    <ImageButton
                        android:id="@+id/btnInfoStore"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_baseline_info"
                        android:background="@android:color/white"
                        android:tint="@color/BLACK40"/>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1.5dp"
                    android:background="@drawable/dotted_2"
                    android:layout_marginVertical="8dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingVertical="4dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/storeRating"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:fontFamily="@font/opensans_bold"
                            android:textColor="@color/BLACK100"
                            android:textSize="18sp"
                            android:text="4.6"
                            android:drawableStart="@drawable/ic_star_rate"
                            android:drawablePadding="8dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:fontFamily="@font/opensans_regular"
                            android:textColor="@color/BLACK60"
                            android:textSize="11sp"
                            android:text="Store Rating"
                            tools:ignore="HardcodedText,SmallSp" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/storeDistance"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:fontFamily="@font/opensans_bold"
                            android:textColor="@color/BLACK100"
                            android:textSize="18sp"
                            android:text="17.6 km"
                            android:drawableStart="@drawable/ic_pin_distance_store"
                            android:drawablePadding="8dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:fontFamily="@font/opensans_regular"
                            android:textColor="@color/BLACK60"
                            android:textSize="11sp"
                            android:text="Jarak dari Kamu"
                            tools:ignore="HardcodedText,SmallSp" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="end|center_vertical">
                        <ImageButton
                            android:visibility="gone"
                            style="@style/Widget.AppCompat.Button.Borderless"
                            android:layout_width="70dp"
                            android:layout_height="35dp"
                            android:adjustViewBounds="true"
                            android:background="@drawable/background_button_redirect_to_store"
                            android:src="@drawable/ic_baseline_directions"/>
                        <Button
                            android:drawablePadding="8dp"
                            android:paddingHorizontal="12dp"
                            android:drawableStart="@drawable/ic_google_maps"
                            android:textAllCaps="false"
                            android:text="Maps"
                            android:id="@+id/btnOpenMaps"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:layout_margin="2dp"
                            android:elevation="2dp"
                            android:background="@drawable/background_button_redirect_gmaps"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:paddingTop="12dp"
                android:paddingBottom="16dp"
                android:background="@android:color/white"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/containerGiveRating">
                <TextView
                    android:paddingHorizontal="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/source_sanspro_regular"
                    android:textColor="@android:color/black"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:text="Beri rating toko ini" />
                <TextView
                    android:paddingHorizontal="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Sampaikan penilaian Anda"
                    android:fontFamily="@font/opensans_regular"
                    android:textColor="@color/BLACK60"
                    android:textSize="12sp"/>

                <me.zhanghai.android.materialratingbar.MaterialRatingBar
                    android:layout_marginTop="10dp"
                    android:id="@+id/ratingBar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:rating="0"
                    android:numStars="5"
                    android:max="5"
                    android:progress="1"
                    android:theme="@style/RatingBar"
                    style="@style/Widget.MaterialRatingBar.RatingBar" />
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@android:color/white">
                <LinearLayout
                    android:padding="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:id="@+id/containerListService">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Pilih jasa yang Anda butuhkan!"
                        android:fontFamily="@font/neosanspro_medium"
                        android:textColor="@android:color/black"
                        android:textSize="18sp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Layanan tersedia"
                        android:fontFamily="@font/opensans_regular"
                        android:textColor="@color/BLACK60"
                        android:textSize="14sp"
                        android:visibility="gone"/>
                    <androidx.recyclerview.widget.RecyclerView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:overScrollMode="never"
                        android:id="@+id/recyclerListService" />
                </LinearLayout>
                <TextView
                    android:visibility="gone"
                    android:clickable="true"
                    android:layout_margin="16dp"
                    android:id="@+id/containerNoService"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="Perhatian! Toko ini belum memiliki satupun layanan yang ditujukan untuk customernya."
                    android:textSize="11sp"
                    android:fontFamily="@font/opensans_bold"
                    android:textColor="@color/BLACK80"
                    android:paddingVertical="12dp"
                    android:paddingHorizontal="12dp"
                    android:justificationMode="inter_word"
                    android:background="@drawable/background_container_notif_to_verify"
                    tools:targetApi="o"
                    android:focusable="true"
                    tools:ignore="SmallSp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:id="@+id/containerListProduct">
                    <TextView
                        android:paddingHorizontal="16dp"
                        android:paddingVertical="12dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Produk toko"
                        android:fontFamily="@font/neosanspro_medium"
                        android:textColor="@android:color/black"
                        android:textSize="18sp"/>
                    <androidx.recyclerview.widget.RecyclerView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:overScrollMode="never"
                        android:id="@+id/recyclerListProduct"
                        android:layout_marginBottom="16dp"
                        android:layout_marginHorizontal="6dp"/>
                </LinearLayout>
                <TextView
                    android:visibility="gone"
                    android:clickable="true"
                    android:layout_marginVertical="16dp"
                    android:layout_marginHorizontal="16dp"
                    android:id="@+id/containerNoProduct"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="Perhatian! Toko ini belum memiliki satupun produk yang dapat diorder customer."
                    android:textSize="11sp"
                    android:fontFamily="@font/opensans_bold"
                    android:textColor="@color/BLACK80"
                    android:paddingVertical="12dp"
                    android:paddingHorizontal="12dp"
                    android:justificationMode="inter_word"
                    android:background="@drawable/background_container_notif_to_verify"
                    tools:targetApi="o"
                    android:focusable="true"
                    tools:ignore="SmallSp" />
            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/floatingActionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        android:layout_margin="16dp"
        android:clickable="true"
        android:focusable="true"
        android:tint="@color/BLUE7"
        app:backgroundTint="@android:color/white"
        app:srcCompat="@drawable/ic_chat_store" />
</androidx.coordinatorlayout.widget.CoordinatorLayout>