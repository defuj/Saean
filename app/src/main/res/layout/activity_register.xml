<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".RegisterActivity">
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        app:liftOnScroll="true">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbarRegister"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:contentInsetStart="0dp"
            android:background="@android:color/white">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingVertical="16dp">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:adjustViewBounds="true"
                    android:layout_marginHorizontal="16dp"
                    android:src="@drawable/saean_logo"/>
                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pendaftaran"
                        android:textColor="@color/BLACK100"
                        android:textSize="20sp"
                        android:fontFamily="@font/neosanspro_medium"
                        android:textStyle="bold"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Buat sebuah akun baru"
                        android:textColor="@color/BLACK60"
                        android:textSize="14sp"
                        android:fontFamily="@font/neosans_pro_regular"
                        android:layout_marginTop="4dp"/>
                </LinearLayout>
                <Button
                    android:id="@+id/btnSign"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:background="@android:color/transparent"
                    android:textAllCaps="false"
                    android:text="Login"
                    android:fontFamily="@font/neosans_pro_regular"
                    android:textColor="?attr/colorPrimary"/>
            </LinearLayout>
        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>
    <androidx.core.widget.NestedScrollView
        android:overScrollMode="never"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <View
                android:layout_width="match_parent"
                android:layout_height="1.5dp"
                android:background="@color/BLACK10"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingHorizontal="16dp"
                android:paddingVertical="26dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nama Lengkap"
                    android:fontFamily="@font/neosanspro_medium"
                    android:textColor="@color/BLACK100"
                    android:textSize="16sp"/>
                <EditText
                    android:id="@+id/regis_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Contoh : Syaiful Zamal"
                    android:textSize="14sp"
                    android:layout_marginTop="8dp"
                    android:inputType="text|textNoSuggestions"
                    android:maxLines="1"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:paddingEnd="16dp"
                    android:paddingStart="16dp"
                    android:background="@drawable/background_form_register"
                    android:layout_marginBottom="16dp"
                    android:maxLength="150"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Jenis Kelamin"
                    android:fontFamily="@font/neosanspro_medium"
                    android:textColor="@color/BLACK100"
                    android:textSize="16sp"/>
                <Spinner
                    android:id="@+id/regis_gender"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:layout_marginTop="8dp"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:paddingEnd="16dp"
                    android:paddingStart="16dp"
                    android:background="@drawable/background_form_register"
                    android:layout_marginBottom="16dp"
                    android:prompt="@string/gender"
                    android:entries="@array/gender_list"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Alamat"
                    android:fontFamily="@font/neosanspro_medium"
                    android:textColor="@color/BLACK100"
                    android:textSize="16sp"/>
                <EditText
                    android:id="@+id/regis_address"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:hint="Contoh : Jl.Tarumanagara No.17, Conggeang, Sumedang 45391"
                    android:textSize="14sp"
                    android:layout_marginTop="8dp"
                    android:inputType="textMultiLine|textNoSuggestions"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:paddingEnd="16dp"
                    android:paddingStart="16dp"
                    android:gravity="top"
                    android:background="@drawable/background_form_register"
                    android:layout_marginBottom="16dp"
                    android:maxLength="250"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Telpon"
                    android:fontFamily="@font/neosanspro_medium"
                    android:textColor="@color/BLACK100"
                    android:textSize="16sp"/>
                <EditText
                    android:id="@+id/regis_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Contoh : +6282240634166"
                    android:textSize="14sp"
                    android:layout_marginTop="8dp"
                    android:inputType="phone|textNoSuggestions"
                    android:maxLines="1"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:paddingEnd="16dp"
                    android:paddingStart="16dp"
                    android:maxLength="16"
                    android:background="@drawable/background_form_register"
                    android:layout_marginBottom="16dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Alamat Email"
                    android:fontFamily="@font/neosanspro_medium"
                    android:textColor="@color/BLACK100"
                    android:textSize="16sp"/>
                <EditText
                    android:id="@+id/regis_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="contoh : def@domain.com"
                    android:textSize="14sp"
                    android:layout_marginTop="8dp"
                    android:inputType="textEmailAddress|textNoSuggestions"
                    android:maxLines="1"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:paddingEnd="16dp"
                    android:paddingStart="16dp"
                    android:background="@drawable/background_form_register"
                    android:layout_marginBottom="16dp"
                    android:maxLength="150"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Kata Sandi"
                    android:fontFamily="@font/neosanspro_medium"
                    android:textColor="@color/BLACK100"
                    android:textSize="16sp"/>
                <EditText
                    android:id="@+id/regis_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="************"
                    android:textSize="14sp"
                    android:layout_marginTop="8dp"
                    android:inputType="textPassword|textNoSuggestions"
                    android:maxLines="1"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:paddingEnd="16dp"
                    android:paddingStart="16dp"
                    android:background="@drawable/background_form_register"
                    android:layout_marginBottom="16dp"
                    android:maxLength="500"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Konfirmasi Kata Sandi"
                    android:fontFamily="@font/neosanspro_medium"
                    android:textColor="@color/BLACK100"
                    android:textSize="16sp"/>
                <EditText
                    android:id="@+id/regis_confirm_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="************"
                    android:textSize="14sp"
                    android:layout_marginTop="8dp"
                    android:inputType="textPassword|textNoSuggestions"
                    android:maxLines="1"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:paddingEnd="16dp"
                    android:paddingStart="16dp"
                    android:background="@drawable/background_form_register"
                    android:layout_marginBottom="16dp"
                    android:maxLength="500"/>

                <Button
                    android:id="@+id/btnBuatAkun"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAllCaps="false"
                    android:text="Buat Akun"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/neosanspro_medium"
                    android:textColor="@android:color/white"
                    android:background="@drawable/background_button_register"
                    android:minHeight="45dp"
                    android:textSize="16sp"
                    style="?attr/borderlessButtonStyle"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1.5dp"
                android:background="@color/BLACK10"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingVertical="16dp"
                android:gravity="center_horizontal|center_vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/opensans_regular"
                    android:text="Dengan membuat akun Anda setuju dengan"
                    android:textSize="12sp"
                    tools:ignore="SmallSp"
                    android:textColor="@color/BLACK60"
                    android:gravity="center_horizontal" />
                <TextView
                    android:id="@+id/user_agreement"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/opensans_regular"
                    android:text="Syarat dan ketentuan"
                    android:textSize="12sp"
                    tools:ignore="SmallSp"
                    android:textColor="#3F51B5"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center_horizontal"
                    android:layout_marginTop="4dp"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>