<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/white"
    tools:context=".menus.fragments.AccountFragment">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar"
        android:layout_height="wrap_content"
        android:layout_width="match_parent">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbarAccount"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@android:color/white"
            app:contentInsetStart="0dp"
            android:paddingHorizontal="8dp"
            app:menu="@menu/menu_toolbar_home">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <TextView
                    android:layout_marginHorizontal="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="Akun Saya"
                    android:textSize="18sp"
                    android:fontFamily="@font/neosanspro_medium"
                    android:textColor="@color/BLACK80" />
            </LinearLayout>
        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>
    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/refreshAccount"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">
        <androidx.core.widget.NestedScrollView
            android:overScrollMode="never"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <RelativeLayout
                    android:id="@+id/containerOpenStore"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#200297E0">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingHorizontal="16dp"
                        android:paddingVertical="12dp"
                        android:layout_marginEnd="30dp">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Kejar peluang suksesmu dengan mambuka toko"
                            android:textSize="14sp"
                            android:fontFamily="@font/neosanspro_medium"
                            android:textColor="@color/BLACK100"
                            android:justificationMode="inter_word"
                            tools:targetApi="o" />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Kalo kamu punya keahlian dan kesempatan untuk berbisnis di sini, kenapa engga?"
                            android:textSize="14sp"
                            android:fontFamily="@font/opensans_regular"
                            android:textColor="@color/BLACK80"
                            android:justificationMode="inter_word"
                            tools:targetApi="o"/>
                    </LinearLayout>
                    <ImageButton
                        android:id="@+id/btnClose"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/ic_close_dark"
                        android:background="@android:color/transparent"
                        android:padding="6dp"
                        android:layout_margin="4dp"
                        android:layout_alignParentEnd="true"/>
                </RelativeLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:id="@+id/containerAccount"
                    android:paddingVertical="24dp"
                    android:paddingHorizontal="16dp"
                    android:gravity="center_vertical">
                    <ImageView
                        android:src="@drawable/user_picture_placeholder"
                        android:id="@+id/userPicture"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:adjustViewBounds="true"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingHorizontal="16dp">
                        <TextView
                            android:id="@+id/userName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            tools:text="Nama Saya"
                            android:textSize="16sp"
                            android:fontFamily="@font/neosanspro_medium"
                            android:textColor="@color/BLACK100" />
                        <TextView
                            android:id="@+id/userEmail"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            tools:text="Nama Saya"
                            android:textSize="14sp"
                            android:fontFamily="@font/opensans_regular"
                            android:textColor="@color/BLACK60"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:id="@+id/containerOpenStoreAction">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:adjustViewBounds="true"
                        android:src="@drawable/store_illustration"
                        android:layout_marginVertical="16dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical|center_horizontal"
                        android:text="Mulai membuka Toko"
                        android:textSize="16sp"
                        android:fontFamily="@font/neosanspro_medium"
                        android:textColor="@color/BLACK100" />
                    <TextView
                        android:maxWidth="240dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical|center_horizontal"
                        android:text="Punya bisnis sendiri adalah impian semua orang. Ini adalah kesempatan untuk mencoba."
                        android:textSize="14sp"
                        android:fontFamily="@font/opensans_regular"
                        android:textColor="@color/BLACK60" />
                    <Button
                        android:layout_marginVertical="26dp"
                        android:layout_marginHorizontal="16dp"
                        android:id="@+id/btnOpenStore"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAllCaps="false"
                        android:text="Buka Toko Gratis"
                        android:layout_marginTop="8dp"
                        android:fontFamily="@font/neosanspro_medium"
                        android:textColor="@android:color/white"
                        android:background="@drawable/background_button_register"
                        android:minHeight="45dp"
                        android:textSize="16sp"
                        style="?attr/borderlessButtonStyle"/>
                </LinearLayout>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>