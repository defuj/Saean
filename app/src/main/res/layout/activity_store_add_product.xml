<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".store.StoreAddProductActivity"
    android:background="@android:color/white">
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar"
        android:layout_height="wrap_content"
        android:layout_width="match_parent">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbarAddProduct"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@android:color/white"
            app:navigationIcon="?attr/homeAsUpIndicator">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center_vertical|end">
                <Button
                    android:id="@+id/btnSaveProduct"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="Selanjutnya"
                    android:textAllCaps="false"
                    android:textColor="@color/BLUE6"
                    android:paddingHorizontal="16dp"
                    android:background="@android:color/transparent"
                    android:fontFamily="@font/opensans_regular"
                    android:textSize="16sp"/>
            </LinearLayout>
        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>
    <androidx.core.widget.NestedScrollView
        android:overScrollMode="never"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingVertical="18dp"
                android:paddingHorizontal="16dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Apa yang Anda jual?"
                    android:textSize="18sp"
                    android:fontFamily="@font/neosanspro_medium"
                    android:textColor="@color/BLACK100"
                    android:layout_marginBottom="16dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nama Produk"
                    android:textSize="12sp"
                    android:fontFamily="@font/opensans_regular"
                    android:textColor="@color/BLACK80" />
                <EditText
                    android:id="@+id/productName"
                    android:paddingVertical="6dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/opensans_regular"
                    android:hint="Tulis Nama Produk"
                    android:textColor="@color/BLACK80"
                    android:textColorHint="@color/BLACK60"
                    android:background="@android:color/transparent"
                    android:inputType="textNoSuggestions"
                    android:singleLine="true"
                    android:maxLines="1"
                    android:maxLength="100"
                    android:textSize="16sp"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1.5dp"
                    android:background="@color/BLACK10"/>

            </LinearLayout>
            <LinearLayout
                android:id="@+id/containerCategories"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Kategori Produk"
                    android:textSize="18sp"
                    android:fontFamily="@font/neosanspro_medium"
                    android:textColor="@color/BLACK100"
                    android:layout_marginBottom="16dp"/>
                <RadioGroup
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >
                    <LinearLayout
                        android:background="?attr/selectableItemBackground"
                        android:clickable="true"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingStart="16dp"
                        android:focusable="true">
                        <RadioButton
                            android:id="@+id/radioGoods"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Barang yang dijual"
                            android:paddingHorizontal="16dp"
                            android:paddingVertical="16dp"
                            android:textSize="16sp"
                            android:textColor="@color/BLACK80"
                            android:fontFamily="@font/opensans_regular"
                            android:drawablePadding="160dp"
                            android:onClick="radioSelected"/>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/BLACK10"/>
                    </LinearLayout>

                    <LinearLayout
                        android:background="?attr/selectableItemBackground"
                        android:clickable="true"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingStart="16dp"
                        android:focusable="true">
                        <RadioButton
                            android:id="@+id/radioServices"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Jasa/Pelayanan tersedia"
                            android:paddingHorizontal="16dp"
                            android:paddingVertical="16dp"
                            android:textSize="16sp"
                            android:textColor="@color/BLACK80"
                            android:fontFamily="@font/opensans_regular"
                            android:drawablePadding="160dp"
                            android:onClick="radioSelected"/>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/BLACK10"/>
                    </LinearLayout>
                </RadioGroup>
            </LinearLayout>
            <LinearLayout
                android:visibility="gone"
                android:id="@+id/containerForService"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingVertical="18dp"
                android:paddingHorizontal="16dp"
                android:layout_marginTop="24dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Deskripsikan Jasa Kamu!"
                    android:textSize="18sp"
                    android:fontFamily="@font/neosanspro_medium"
                    android:textColor="@color/BLACK100"
                    android:layout_marginBottom="16dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Keterangan Jasa"
                    android:textSize="12sp"
                    android:fontFamily="@font/opensans_regular"
                    android:textColor="@color/BLACK80" />
                <EditText
                    android:id="@+id/serviceDescription"
                    android:paddingVertical="6dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/opensans_regular"
                    android:hint="Tulis Deskripsi Jasa"
                    android:textColor="@color/BLACK80"
                    android:textColorHint="@color/BLACK60"
                    android:background="@android:color/transparent"
                    android:inputType="textMultiLine"
                    android:maxLength="300"
                    android:gravity="top"
                    android:textSize="16sp"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1.5dp"
                    android:background="@color/BLACK10"/>
                </LinearLayout>
            <LinearLayout
                android:visibility="gone"
                android:id="@+id/containerForGoods"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingVertical="18dp"
                android:paddingHorizontal="16dp"
                android:layout_marginTop="24dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Deskripsikan Barangnya!"
                    android:textSize="18sp"
                    android:fontFamily="@font/neosanspro_medium"
                    android:textColor="@color/BLACK100"
                    android:layout_marginBottom="16dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Keterangan Barang"
                    android:textSize="12sp"
                    android:fontFamily="@font/opensans_regular"
                    android:textColor="@color/BLACK80" />
                <EditText
                    android:id="@+id/goodsDescription"
                    android:paddingVertical="6dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/opensans_regular"
                    android:hint="Tulis Deskripsi Barang"
                    android:textColor="@color/BLACK80"
                    android:textColorHint="@color/BLACK60"
                    android:background="@android:color/transparent"
                    android:inputType="textMultiLine"
                    android:maxLength="300"
                    android:gravity="top"
                    android:textSize="16sp"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1.5dp"
                    android:background="@color/BLACK10"/>

                <TextView
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Jumlah Stok"
                    android:textSize="18sp"
                    android:fontFamily="@font/neosanspro_medium"
                    android:textColor="@color/BLACK100"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Stok tidak boleh kosong"
                    android:textSize="12sp"
                    android:fontFamily="@font/opensans_regular"
                    android:textColor="@color/BLACK80" />
                <EditText
                    android:id="@+id/goodsStock"
                    android:paddingVertical="6dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/opensans_regular"
                    android:hint="0"
                    android:textColor="@color/BLACK80"
                    android:textColorHint="@color/BLACK60"
                    android:background="@android:color/transparent"
                    android:inputType="number"
                    android:maxLength="7"
                    android:singleLine="true"
                    android:maxLines="1"
                    android:gravity="top"
                    android:textSize="16sp"
                    android:text="1"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1.5dp"
                    android:background="@color/BLACK10"/>

                <TextView
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Harga Barang"
                    android:textSize="18sp"
                    android:fontFamily="@font/neosanspro_medium"
                    android:textColor="@color/BLACK100"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Harga harus diisi antara 100 - 100.000.000"
                    android:textSize="12sp"
                    android:fontFamily="@font/opensans_regular"
                    android:textColor="@color/BLACK80" />
                <EditText
                    android:id="@+id/goodsPrice"
                    android:paddingVertical="6dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/opensans_regular"
                    android:hint="0"
                    android:textColor="@color/BLACK80"
                    android:textColorHint="@color/BLACK60"
                    android:background="@android:color/transparent"
                    android:inputType="number"
                    android:maxLength="11"
                    android:singleLine="true"
                    android:maxLines="1"
                    android:gravity="center_vertical"
                    android:textSize="16sp"
                    android:drawablePadding="8dp"
                    android:drawableStart="@drawable/ic_rupiah"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1.5dp"
                    android:background="@color/BLACK10"/>

                <TextView
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Upload Gambar"
                    android:textSize="18sp"
                    android:fontFamily="@font/neosanspro_medium"
                    android:textColor="@color/BLACK100"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingVertical="8dp"
                    android:layout_marginBottom="24dp">
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_weight="1">
                        <RelativeLayout
                            android:padding="6dp"
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            app:layout_constraintDimensionRatio="H,1:1"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent">
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:adjustViewBounds="true"
                                android:src="@drawable/ic_baseline_add_28"
                                android:tint="@color/BLACK60"
                                android:layout_centerInParent="true"/>
                            <ImageView
                                android:clickable="true"
                                android:focusable="true"
                                android:id="@+id/productImage1"
                                android:background="@drawable/background_add_picture_product"
                                android:layout_marginVertical="6dp"
                                android:layout_marginHorizontal="6dp"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="centerCrop"/>
                            <ImageButton
                                android:visibility="gone"
                                android:id="@+id/btnDeleteImageProduct1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:adjustViewBounds="true"
                                android:src="@drawable/ic_baseline_cancel_24"
                                android:background="@android:color/transparent"
                                android:layout_alignParentEnd="true"/>
                        </RelativeLayout>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_weight="1">
                        <RelativeLayout
                            android:padding="6dp"
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            app:layout_constraintDimensionRatio="H,1:1"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent">
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:adjustViewBounds="true"
                                android:src="@drawable/ic_baseline_add_28"
                                android:tint="@color/BLACK60"
                                android:layout_centerInParent="true"/>
                            <ImageView
                                android:clickable="true"
                                android:focusable="true"
                                android:id="@+id/productImage2"
                                android:background="@drawable/background_add_picture_product"
                                android:layout_marginVertical="6dp"
                                android:layout_marginHorizontal="6dp"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="centerCrop"/>
                            <ImageButton
                                android:visibility="gone"
                                android:id="@+id/btnDeleteImageProduct2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:adjustViewBounds="true"
                                android:src="@drawable/ic_baseline_cancel_24"
                                android:background="@android:color/transparent"
                                android:layout_alignParentEnd="true"/>
                        </RelativeLayout>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_weight="1">
                        <RelativeLayout
                            android:padding="6dp"
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            app:layout_constraintDimensionRatio="H,1:1"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent">
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:adjustViewBounds="true"
                                android:src="@drawable/ic_baseline_add_28"
                                android:tint="@color/BLACK60"
                                android:layout_centerInParent="true"/>
                            <ImageView
                                android:clickable="true"
                                android:focusable="true"
                                android:id="@+id/productImage3"
                                android:background="@drawable/background_add_picture_product"
                                android:layout_marginVertical="6dp"
                                android:layout_marginHorizontal="6dp"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="centerCrop"/>
                            <ImageButton
                                android:visibility="gone"
                                android:id="@+id/btnDeleteImageProduct3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:adjustViewBounds="true"
                                android:src="@drawable/ic_baseline_cancel_24"
                                android:background="@android:color/transparent"
                                android:layout_alignParentEnd="true"/>
                        </RelativeLayout>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_weight="1">
                        <RelativeLayout
                            android:padding="6dp"
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            app:layout_constraintDimensionRatio="H,1:1"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent">
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:adjustViewBounds="true"
                                android:src="@drawable/ic_baseline_add_28"
                                android:tint="@color/BLACK60"
                                android:layout_centerInParent="true"/>
                            <ImageView
                                android:clickable="true"
                                android:focusable="true"
                                android:id="@+id/productImage4"
                                android:background="@drawable/background_add_picture_product"
                                android:layout_marginVertical="6dp"
                                android:layout_marginHorizontal="6dp"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="centerCrop"/>
                            <ImageButton
                                android:visibility="gone"
                                android:id="@+id/btnDeleteImageProduct4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:adjustViewBounds="true"
                                android:src="@drawable/ic_baseline_cancel_24"
                                android:background="@android:color/transparent"
                                android:layout_alignParentEnd="true"/>
                        </RelativeLayout>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>