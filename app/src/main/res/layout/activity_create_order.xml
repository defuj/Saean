<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".store.CreateOrderActivity"
    android:background="@android:color/white">
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar"
        android:layout_height="wrap_content"
        android:layout_width="match_parent">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbarCreateOrder"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@android:color/white"
            app:contentInsetStart="0dp"
            app:contentInsetStartWithNavigation="0dp"
            app:navigationIcon="?attr/homeAsUpIndicator">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <TextView
                    android:layout_marginStart="12dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="Buat Order"
                    android:textSize="18sp"
                    android:fontFamily="@font/neosanspro_medium"
                    android:textColor="@color/BLACK80" />
                <TextView
                    android:id="@+id/orderTime"
                    android:gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    tools:text="16/07/2020"
                    android:textSize="14sp"
                    android:fontFamily="@font/opensans_regular"
                    android:textColor="@color/BLACK100"
                    android:paddingHorizontal="16dp"/>
            </LinearLayout>
        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>
    <androidx.core.widget.NestedScrollView
        android:overScrollMode="never"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_marginBottom="-6dp"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Toko yang dituju : "
                android:textSize="16sp"
                android:fontFamily="@font/opensans_bold"
                android:textColor="@color/BLACK100"/>
            <androidx.cardview.widget.CardView
                android:id="@+id/openStore"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="4dp"
                app:cardCornerRadius="8dp"
                android:layout_marginVertical="16dp"
                android:layout_marginHorizontal="16dp"
                android:divider="@android:color/transparent"
                android:dividerHeight="0.0px"
                android:clipToPadding="false"
                android:clipChildren="false"
                app:cardPreventCornerOverlap="false"
                android:clickable="true"
                android:foreground="?attr/selectableItemBackground"
                android:focusable="true">
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="12dp">
                            <ImageView
                                android:id="@+id/storePicture"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:adjustViewBounds="true"
                                android:src="@drawable/ic_my_business"
                                android:maxWidth="45dp"
                                android:layout_marginEnd="12dp"/>
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_weight="1"
                                android:layout_marginEnd="6dp">
                                <TextView
                                    android:gravity="center_vertical"
                                    android:drawablePadding="8dp"
                                    android:id="@+id/storeName"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    tools:text="This is the name of store"
                                    android:fontFamily="@font/opensans_bold"
                                    android:textSize="18sp"
                                    android:textColor="@color/BLACK100"
                                    android:singleLine="true"
                                    android:maxLines="1" />
                                <TextView
                                    android:id="@+id/storeAddress"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    tools:text="This is store address"
                                    android:fontFamily="@font/opensans_regular"
                                    android:textSize="14sp"
                                    android:textColor="@color/BLACK60"
                                    android:singleLine="true"
                                    android:maxLines="1"/>

                                <RatingBar
                                    android:layout_marginTop="4dp"
                                    android:id="@+id/storeRating"
                                    style="@style/Widget.AppCompat.RatingBar.Small"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:max="5"
                                    android:numStars="5"
                                    android:rating="0"
                                    android:theme="@style/RatingBar"/>

                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </FrameLayout>
            </androidx.cardview.widget.CardView>
            <TextView
                android:layout_marginHorizontal="16dp"
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Layanan dipilih : "
                android:textSize="16sp"
                android:fontFamily="@font/opensans_bold"
                android:textColor="@color/BLACK100"/>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:layout_marginHorizontal="16dp"
                app:cardElevation="4dp"
                android:divider="@android:color/transparent"
                android:dividerHeight="0.0px"
                android:clipToPadding="false"
                android:clipChildren="false"
                app:cardPreventCornerOverlap="false"
                app:cardCornerRadius="8dp">
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:background="#0F000000"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">
                        <LinearLayout
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:paddingVertical="8dp"
                            android:paddingHorizontal="12dp"
                            android:gravity="center_vertical">
                            <TextView
                                android:id="@+id/serviceTitle"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                tools:text="Services title"
                                android:fontFamily="@font/opensans_bold"
                                android:textSize="18sp"
                                android:textColor="@color/BLACK100"
                                android:singleLine="true"
                                android:maxLines="1"
                                android:paddingVertical="4dp"/>
                            <TextView
                                android:id="@+id/serviceDescription"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                tools:text="Description of services"
                                android:fontFamily="@font/opensans_regular"
                                android:textSize="14sp"
                                android:textColor="@color/BLACK80"
                                android:justificationMode="inter_word"
                                tools:targetApi="o" />
                        </LinearLayout>
                    </LinearLayout>
                </FrameLayout>
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_gravity="end"
                        android:layout_marginTop="-8dp"
                        android:layout_marginStart="-10dp"
                        android:layout_marginEnd="-10dp"
                        android:layout_width="45dp"
                        android:layout_height="wrap_content"
                        android:adjustViewBounds="true"
                        android:src="@drawable/ic_round_help" />
                </FrameLayout>
            </androidx.cardview.widget.CardView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">
                <TextView
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tulis Deskripsi"
                    android:textSize="18sp"
                    android:fontFamily="@font/neosanspro_medium"
                    android:textColor="@color/BLACK100"/>
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:counterMaxLength="5000"
                    app:counterEnabled="true"
                    app:hintTextColor="@color/BLACK80"
                    app:helperTextTextAppearance="@style/helperText"
                    app:helperTextEnabled="true"
                    app:helperText="">
                    <EditText
                        android:id="@+id/problemDescription"
                        android:paddingVertical="8dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/opensans_regular"
                        android:hint="Tulis deskripsi masalah di sini"
                        android:textColor="@color/BLACK80"
                        android:textColorHint="@color/BLACK60"
                        android:inputType="textMultiLine"
                        android:maxLength="5000"
                        android:gravity="top"
                        android:textSize="16sp"
                        android:background="@drawable/edittext_bottom_border"/>
                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:visibility="visible"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tuliskan permasalahan pada gadget yang ingin kamu servis/perbaiki secara mendetail &amp; tambahkan gambar sebagai penjelas jika diperlukan."
                    android:textSize="12sp"
                    android:fontFamily="@font/opensans_regular"
                    android:textColor="@color/BLACK80"
                    android:justificationMode="inter_word"
                    tools:targetApi="o" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_marginHorizontal="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Upload Gambar"
                    android:textSize="18sp"
                    android:fontFamily="@font/neosanspro_medium"
                    android:textColor="@color/BLACK100"/>
                <LinearLayout
                    android:layout_marginHorizontal="6dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingVertical="8dp">
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_weight="1">
                        <RelativeLayout
                            android:padding="6dp"
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            app:layout_constraintDimensionRatio="H,1:1"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent">
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:adjustViewBounds="true"
                                android:src="@drawable/ic_baseline_add_28"
                                android:tint="@color/BLACK60"
                                android:layout_centerInParent="true"/>
                            <ImageView
                                android:clickable="true"
                                android:focusable="true"
                                android:id="@+id/productImage1"
                                android:background="@drawable/background_add_picture_product"
                                android:layout_marginVertical="6dp"
                                android:layout_marginHorizontal="6dp"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="centerCrop"/>
                            <ImageButton
                                android:visibility="gone"
                                android:id="@+id/btnDeleteImageProduct1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:adjustViewBounds="true"
                                android:src="@drawable/ic_baseline_cancel_24"
                                android:background="@android:color/transparent"
                                android:layout_alignParentEnd="true"/>
                        </RelativeLayout>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_weight="1">
                        <RelativeLayout
                            android:padding="6dp"
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            app:layout_constraintDimensionRatio="H,1:1"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent">
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:adjustViewBounds="true"
                                android:src="@drawable/ic_baseline_add_28"
                                android:tint="@color/BLACK60"
                                android:layout_centerInParent="true"/>
                            <ImageView
                                android:clickable="true"
                                android:focusable="true"
                                android:id="@+id/productImage2"
                                android:background="@drawable/background_add_picture_product"
                                android:layout_marginVertical="6dp"
                                android:layout_marginHorizontal="6dp"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="centerCrop"/>
                            <ImageButton
                                android:visibility="gone"
                                android:id="@+id/btnDeleteImageProduct2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:adjustViewBounds="true"
                                android:src="@drawable/ic_baseline_cancel_24"
                                android:background="@android:color/transparent"
                                android:layout_alignParentEnd="true"/>
                        </RelativeLayout>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_weight="1">
                        <RelativeLayout
                            android:padding="6dp"
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            app:layout_constraintDimensionRatio="H,1:1"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent">
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:adjustViewBounds="true"
                                android:src="@drawable/ic_baseline_add_28"
                                android:tint="@color/BLACK60"
                                android:layout_centerInParent="true"/>
                            <ImageView
                                android:clickable="true"
                                android:focusable="true"
                                android:id="@+id/productImage3"
                                android:background="@drawable/background_add_picture_product"
                                android:layout_marginVertical="6dp"
                                android:layout_marginHorizontal="6dp"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="centerCrop"/>
                            <ImageButton
                                android:visibility="gone"
                                android:id="@+id/btnDeleteImageProduct3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:adjustViewBounds="true"
                                android:src="@drawable/ic_baseline_cancel_24"
                                android:background="@android:color/transparent"
                                android:layout_alignParentEnd="true"/>
                        </RelativeLayout>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_weight="1">
                        <RelativeLayout
                            android:padding="6dp"
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            app:layout_constraintDimensionRatio="H,1:1"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent">
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:adjustViewBounds="true"
                                android:src="@drawable/ic_baseline_add_28"
                                android:tint="@color/BLACK60"
                                android:layout_centerInParent="true"/>
                            <ImageView
                                android:clickable="true"
                                android:focusable="true"
                                android:id="@+id/productImage4"
                                android:background="@drawable/background_add_picture_product"
                                android:layout_marginVertical="6dp"
                                android:layout_marginHorizontal="6dp"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="centerCrop"/>
                            <ImageButton
                                android:visibility="gone"
                                android:id="@+id/btnDeleteImageProduct4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:adjustViewBounds="true"
                                android:src="@drawable/ic_baseline_cancel_24"
                                android:background="@android:color/transparent"
                                android:layout_alignParentEnd="true"/>
                        </RelativeLayout>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Button
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginVertical="16dp"
                    android:id="@+id/btnCreateOrder"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:textAllCaps="false"
                    android:text="Buat order sekarang"
                    android:fontFamily="@font/neosanspro_medium"
                    android:textColor="@android:color/white"
                    android:background="@drawable/background_button_create_store_active"
                    android:minHeight="45dp"
                    android:textSize="16sp" />
            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>