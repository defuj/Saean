<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BlockedActivity"
    android:orientation="vertical"
    android:background="@android:color/white">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_vertical|center_horizontal">
        <ImageView
            android:id="@+id/blockedImage"
            android:maxHeight="180dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:layout_marginBottom="24dp" />
        <TextView
            android:id="@+id/blockedMessageTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/opensans_bold"
            android:text="Dalam Pemeliharaan"
            android:textSize="20sp"
            android:textColor="@color/BLACK80"
            android:layout_marginHorizontal="24dp"
            android:gravity="center_horizontal"/>
        <TextView
            android:id="@+id/blockedMessageBody"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/opensans_regular"
            android:text="Sistem sedang dalam pemeliharaan, silahkan kembali lagi nanti."
            android:textSize="16sp"
            android:textColor="@color/BLACK60"
            android:layout_marginHorizontal="24dp"
            android:gravity="center_horizontal"
            android:layout_marginTop="8dp"/>

        <Button
            android:id="@+id/btnBlockedAction"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:minWidth="100dp"
            android:paddingHorizontal="16dp"
            android:text="Tutup"
            android:layout_marginVertical="16dp"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:background="@drawable/bg_button_close_blocked"
            android:textSize="14sp"
            android:textAllCaps="false"
            android:fontFamily="@font/opensans_regular"
            android:textColor="@color/BLACK80"/>
    </LinearLayout>
</LinearLayout>