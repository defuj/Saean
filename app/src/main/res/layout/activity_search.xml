<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".search.SearchActivity"
    android:background="@android:color/white">
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:background="@android:color/white">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbarSearch"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@android:color/white"
            app:navigationIcon="?attr/homeAsUpIndicator"
            app:menu="@menu/menu_toolbar_home"
            app:contentInsetStartWithNavigation="0dp"
            app:contentInsetStart="0dp"
            android:paddingEnd="8dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <TextView
                    android:clickable="true"
                    android:id="@+id/searchEdit"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:layout_marginVertical="9dp"
                    android:layout_marginEnd="6dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="Cari ..."
                    android:textSize="14sp"
                    android:fontFamily="@font/opensans_regular"
                    android:drawableStart="@drawable/ic_search_market"
                    android:drawablePadding="8dp"
                    android:background="@drawable/background_form_search_market"
                    android:focusable="true" />
                <ImageButton
                    android:id="@+id/btnClearSearch"
                    android:layout_marginStart="-38dp"
                    android:layout_marginEnd="18dp"
                    android:background="@drawable/bg_button_clear_search"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:padding="3dp"
                    app:srcCompat="@drawable/ic_clear_search"
                    android:tint="@android:color/white"
                    android:visibility="gone"/>
            </LinearLayout>
        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>
    <androidx.core.widget.NestedScrollView
        android:overScrollMode="never"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:paddingVertical="16dp"
                android:paddingHorizontal="16dp"
                android:id="@+id/txtResult"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/opensans_regular"
                android:textColor="@color/BLACK80"
                android:text="Sedang mencari toko penyedia jasa ..."
                android:textSize="14sp"/>
            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:overScrollMode="never"
                android:id="@+id/recyclerSearch" />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
    <LinearLayout
        android:visibility="gone"
        android:id="@+id/containerNoSearch"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_vertical|center_horizontal">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:adjustViewBounds="true"
            android:src="@drawable/ic_magnifying_glass"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:fontFamily="@font/neosanspro_medium"
            android:textColor="@color/BLACK80"
            android:text="Oops . . ."
            android:textSize="22sp"
            android:layout_marginTop="8dp"
            android:paddingVertical="6dp"/>
        <TextView
            android:id="@+id/txtNoResult"
            android:maxWidth="250dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:fontFamily="@font/opensans_regular"
            android:textColor="@color/BLACK60"
            android:text="Hasil tidak didapatkan, silahkan gunakan kata kunci lain."
            android:textSize="16sp"/>
    </LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>