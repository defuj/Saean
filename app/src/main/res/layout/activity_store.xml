<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".store.StoreActivity"
    android:background="@color/BLACK01">
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar"
        android:layout_height="wrap_content"
        android:layout_width="match_parent">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbarStore"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@android:color/white"
            app:contentInsetStart="0dp"
            app:contentInsetStartWithNavigation="0dp"
            android:paddingEnd="8dp"
            app:menu="@menu/menu_toolbar_home"
            app:navigationIcon="?attr/homeAsUpIndicator">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/searchInStore"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:layout_marginVertical="8dp"
                    android:layout_marginEnd="6dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="Cari di store"
                    android:textSize="14sp"
                    android:fontFamily="@font/opensans_regular"
                    android:drawableStart="@drawable/ic_search_market"
                    android:drawablePadding="8dp"
                    android:background="@drawable/background_form_search_market"/>
            </LinearLayout>
        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>
    <androidx.core.widget.NestedScrollView
        android:overScrollMode="never"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/storeFront"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintDimensionRatio="H,5:2"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/image_placeholder_landscape"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@android:color/white"
                android:paddingHorizontal="16dp"
                android:paddingTop="16dp">

                <TextView
                    android:id="@+id/storeName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/source_sanspro_regular"
                    android:textColor="@android:color/black"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    tools:text="This is store name" />
                <TextView
                    android:id="@+id/storeAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:text="This is store address"
                    android:fontFamily="@font/opensans_regular"
                    android:textColor="@color/BLACK60"
                    android:textSize="14sp"
                    android:paddingVertical="4dp"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1.5dp"
                    android:background="@drawable/dotted_2"
                    android:layout_marginVertical="8dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingVertical="4dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/storeRating"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:fontFamily="@font/opensans_bold"
                            android:textColor="@color/BLACK100"
                            android:textSize="18sp"
                            android:text="4.6"
                            android:drawableStart="@drawable/ic_star_rate"
                            android:drawablePadding="8dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:fontFamily="@font/opensans_regular"
                            android:textColor="@color/BLACK60"
                            android:textSize="11sp"
                            android:text="Store Rating"
                            tools:ignore="HardcodedText,SmallSp" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/storeDistance"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:fontFamily="@font/opensans_bold"
                            android:textColor="@color/BLACK100"
                            android:textSize="18sp"
                            android:text="17.6 km"
                            android:drawableStart="@drawable/ic_pin_distance_store"
                            android:drawablePadding="8dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:fontFamily="@font/opensans_regular"
                            android:textColor="@color/BLACK60"
                            android:textSize="11sp"
                            android:text="Jarak dari Kamu"
                            tools:ignore="HardcodedText,SmallSp" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:paddingTop="12dp"
                android:paddingBottom="16dp"
                android:background="@android:color/white"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/containerGiveRating">
                <TextView
                    android:paddingHorizontal="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/source_sanspro_regular"
                    android:textColor="@android:color/black"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:text="Beri rating toko ini" />
                <TextView
                    android:paddingHorizontal="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Sampaikan penilaian Anda"
                    android:fontFamily="@font/opensans_regular"
                    android:textColor="@color/BLACK60"
                    android:textSize="12sp"/>

                <me.zhanghai.android.materialratingbar.MaterialRatingBar
                    android:layout_marginTop="10dp"
                    android:id="@+id/ratingBar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:rating="0"
                    android:numStars="5"
                    android:max="5"
                    android:progress="1"
                    android:theme="@style/RatingBar"
                    style="@style/Widget.MaterialRatingBar.RatingBar" />
            </LinearLayout>

            <LinearLayout
                android:padding="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/containerListService">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Layanan tersedia"
                    android:fontFamily="@font/neosanspro_medium"
                    android:textColor="@android:color/black"
                    android:textSize="18sp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Layanan ini disediakan oleh toko"
                    android:fontFamily="@font/opensans_regular"
                    android:textColor="@color/BLACK60"
                    android:textSize="14sp"/>
                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:overScrollMode="never"
                    android:id="@+id/recyclerListService"/>
            </LinearLayout>
            <TextView
                android:visibility="gone"
                android:clickable="true"
                android:layout_margin="16dp"
                android:id="@+id/containerNoService"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="Perhatian! Toko ini belum memiliki satupun layanan yang ditujukan untuk customernya."
                android:textSize="11sp"
                android:fontFamily="@font/opensans_bold"
                android:textColor="@color/BLACK80"
                android:paddingVertical="12dp"
                android:paddingHorizontal="12dp"
                android:justificationMode="inter_word"
                android:background="@drawable/background_container_notif_to_verify"
                tools:targetApi="o"
                android:focusable="true"
                tools:ignore="SmallSp" />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>